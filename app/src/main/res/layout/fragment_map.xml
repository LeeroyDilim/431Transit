<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".app.MapFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/MapToolBar"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/MapCurrentLocationButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="start"
            android:background="#FFFFFF"
            android:src="@drawable/live_location_icon"
            android:layout_marginStart="30dp"
            android:contentDescription="Current Location" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Map"
            android:textColor="@color/navy"
            android:textSize="24sp"
            android:layout_gravity="center"/>

        <ImageButton
            android:id="@+id/MapRefreshLocationButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="end"
            android:background="#FFFFFF"
            android:src="@drawable/refresh_enabled_icon"
            android:layout_marginEnd="30dp"
            android:contentDescription="Refresh Location"
            />

    </androidx.appcompat.widget.Toolbar>

    <View
        android:id="@+id/MapToolBarBorder"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/border"
        app:layout_constraintBottom_toBottomOf="@+id/MapToolBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>